<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.News" parent="Theme.Material3.DayNight">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondaryColor</item>
    <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->

    <item name="colorPrimaryDark">@color/primaryColor</item>
    <item name="android:colorBackground">@color/backgroundColor</item>
    <item name="colorError">@color/errorColor</item>
  </style>

  <style name="Theme.MySplash" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/primaryColor</item>
    <item name="windowSplashScreenAnimationDuration">200</item>
    <item name="postSplashScreenTheme">@style/Theme.News</item>
    <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>-->
    <item name="windowSplashScreenAnimatedIcon">
      @drawable/text_logo
    </item>
  </style>

  <style name="TextAppearance.AppCompat.Caption.Custom" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">@color/captionTextColor</item>
  </style>
</resources>
